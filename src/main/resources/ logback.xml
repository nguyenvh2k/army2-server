<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>
            %magenta(%d{HH:mm:ss.SSS}) %yellow([%thread]) %highlight(%-5level) %logger{36} - %cyan(%msg) %n
        </pattern>
    </encoder>
</appender>

<root level="debug">
<appender-ref ref="CONSOLE" />
</root>